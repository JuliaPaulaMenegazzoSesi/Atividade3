@model List<cliente.Models.Cliente>

<h1>Lista de Cliente</h1>



<div class="row row-cols-1 row-cols-md-3 mb-3 text-center">


        @{
            foreach(var cliente in Model){
                <div class="col">

                    <div class="card mb-4 rounded-3 shadow-sm">
                    <div class="card-header py-3">
                        <h4 class="my-0 fw-normal">#@cliente.Id @cliente.Nome</h4>
                    </div>
                    <div class="card-body">
                        <h1 class="card-title pricing-card-title">R$@cliente.Valor</h1>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>@cliente.End</li>
                            <li><small>[@cliente.Tel] | [@cliente.Email]</small></li>
                        </ul>
                        <button type="button" class="w-100 btn btn-lg btn-outline-primary">@cliente.Cpf</button>
                    </div>
                    </div>

                </div>
            }
        }


    </div>